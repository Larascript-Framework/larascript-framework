{
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "workbench.preferredHighContrastColorTheme": "Visual Studio Dark",
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "folder-path-color.folders": [
    {
      "path": "src/app",
      "color": "custom1",
      "tooltip": "Application",
      "symbol": "üì¶"
    },
    {
      "path": "src/core",
      "color": "custom2",
      "tooltip": "System Core",
      "symbol": "üõ†Ô∏è"
    },
    {
      "path": "src/test",
      "color": "custom3",
      "tooltip": "Test",
      "symbol": "üß™"
    },
    {
      "path": "src/config",
      "color": "custom4",
      "tooltip": "Configuraiton",
      "symbol": "üìù"
    }
  ],
  "workbench.colorCustomizations": {
    "folderPathColor.custom1": "#8d9249",
    "folderPathColor.custom2": "#4cb3c3",
    "folderPathColor.custom3": "#ffda446b",
    "folderPathColor.custom4": "#ff44b7fc"
  },
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.format.enable": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.autoImportFileExcludePatterns": [
    "**/index.js",
    "**/index.ts",
    "**/index.tsx"
  ]
}
